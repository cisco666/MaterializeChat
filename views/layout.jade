doctype html
html(ng-app="chat")
	head
		title= title
		link(rel='stylesheet', href='/stylesheets/materialize.css')
	body
		section(class="container")
			block content
		div(id="modal1" class="modal")
			div(class="modal-content")
				div(class="input-field col s12 offset-s3")
						input(id="userName" type="text" class="validate")
						label(for="userNem") Quien eres?
						center
							button(type="button" id="addUser" class="btn waves-effect waves-light") Continuar
	script(src="https://ajax.googleapis.com/ajax/libs/jquery/2.2.0/jquery.min.js")
	script(src="socket.io/socket.io.js" type="text/javascript")
	script(src="/javascripts/materialize.min.js")
	script(src="/javascripts/initializers.js")
	script(src="/javascripts/chat.js")
